@model blog.web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="container col-xxl-8 px-4 py-4" >

    <div class="row align-items-center g-5 py-5" >
        
        <div class="col-12 col-lg-6" >
            
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Blog the develop blog

            </h1>

            <p class="lead" >
                A blog is an informational website published on the World Wide Web consisting of discrete, often informal diary-style text entries. 
                Posts are typically displayed in reverse chronological order so that the most recent post appears first,
                at the top of the web page.

            </p>

        </div>


        <div class="col-12 col-lg-6">

            <img src="https://images.pexels.com/photos/39284/macbook-apple-imac-computer-39284.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="" 
            class="d-block mx-lg-auto img-fluid" width="300"
            />

        </div>

    </div>

</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model != null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">

                        @tag.Name

                    </span>
                }
            }

        </div>

    </div>

</div>


<div class="container">
    <div class="row justify-content-center">

        <div class="col-6">

            @if(Model !=null && Model.BlogPosts.Any())
            {
             foreach(var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-4">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid">

                        <h2 class="mb-4">@blogPost.Heading</h2>

                        <p class="mb-4"> 
                            Author: @blogPost.Author
                            <br/>
                            Published Date : @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-5">@blogPost.ShortDescription</p>

                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary">@tag.Name</span>
                            }

                        </p>



                        <a asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle" class="btn btn-dark">Read More</a>

                    </div>
                }

            }

        </div>

    </div>


</div>